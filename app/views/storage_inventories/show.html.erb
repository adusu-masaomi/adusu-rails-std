<%- model_class = StorageInventory -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <!-- <dt><strong><%= model_class.human_attribute_name(:material_master_id) %>:</strong></dt> -->
  <!-- <dd><%= @storage_inventory.material_master_id %></dd> -->
  
  <dt><strong>保管場所</strong></dt>
  <% if @storage_inventory.warehouse_id.present? %>
  <dd><%= StorageInventory.warehouse[@storage_inventory.warehouse_id][0] %></dd>
  <% else %>
  <dd>-</dd>
  <% end %>
  
  <dt><strong><%= model_class.human_attribute_name(:material_code) %>:</strong></dt>
  <dd><%= @storage_inventory.material_master.material_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:material_name) %>:</strong></dt>
  <dd><%= @storage_inventory.material_master.material_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @storage_inventory.quantity %></dd>
  
  <dt><strong>単位</strong></dt>
  <% if @storage_inventory.unit_master_id.present? %>
    <dd><%= @storage_inventory.unit_master.unit_name %></dd>
  <% else %>
    <dd>-</dd>
  <% end %>
  
  <dt><strong><%= model_class.human_attribute_name(:unit_price) %>:</strong></dt>
  <dd><%= @storage_inventory.unit_price %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              storage_inventories_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_storage_inventory_path(@storage_inventory), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              storage_inventory_path(@storage_inventory),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
