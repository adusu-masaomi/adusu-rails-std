<%- model_class = Order -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:purchase_order_date) %>:</strong></dt>
  <dd><%= @order.purchase_order_history.purchase_order_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:material_code) %>:</strong></dt>
  <dd><%= @order.material_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:material_name) %>:</strong></dt>
  <dd><%= @order.material_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @order.quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:order_unit_price) %>:</strong></dt>
  <dd><%= @order.order_unit_price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:order_price) %>:</strong></dt>
  <dd><%= @order.order_price %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              purchase_order_histories_list_path(construction_id: params[:construction_id], move_flag: params[:move_flag]), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_order_path(@order), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              order_path(@order, list: "1", construction_id: params[:construction_id], move_flag: params[:move_flag]),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
